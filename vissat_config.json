{
  "dataset_dir": "/path/to/image/data",
  "work_dir": "/path/to/work/directory",
  "bounding_box": {
    "zone_number": UTM zone,
    "hemisphere": "N" or "S",
    "ul_easting": x coordinate of upper-left corner of AOI (in UTM)
    "ul_northing": y coordinate of upper-left corner of AOI (in UTM),
    "width": width of AOI (meters),
    "height": height of AOI (meters)
  },
  "steps_to_run": {
    "clean_data": true,
    "crop_image": true,
    "derive_approx": true,
    "choose_subset": true,
    "colmap_sfm_perspective": true,
    "inspect_sfm_perspective": false,
    "reparam_depth": true,
    "colmap_mvs": true,
    "aggregate_2p5d": true,
    "aggregate_3d": true
  },
  "alt_min": mininum altitude,
  "alt_max": maximum altitude
}
